<p id="notice"><%= notice %></p>

<p>
	<%= link_to 'Choose a Different Coach', coaches_path %>
</p>
<p>
  <strong>Coach:</strong>
  <%= @coach.name %>
</p>

<p>
  Please select a 30 minute timeslot from the availabilities below.
</p>

<p>
  All times listed are in the coach's local time zone of 
  <strong><%= @coach.time_zone %></strong>
</p>

<% @availabilities.each do |a| %>
	<h3><%= "%{day}, %{date}" % a %></h3>
	<% if a[:availability].length == 0 %> 
		<p>No availability on this date</p>
	<% end %>

	<% a[:availability].each do |block| %>
		<div>
			<%= link_to(block[:start_time], new_appointment_path(:coach_id => @coach,
			                                                     :availability_block_id => block[:id],
				                                                 :date => a[:date])) %>
		</div>


	<% end %>



<% end %>
